<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>login_logout_bysession</display-name>
  <welcome-file-list>
    <welcome-file>Signup.html</welcome-file>
  </welcome-file-list>
 <context-param>
    <param-name>driver</param-name>
    <param-value>oracle.jdbc.driver.OracleDriver</param-value>
  </context-param>
  <context-param>
    <param-name>url</param-name>
    <param-value>jdbc:oracle:thin:@localhost:1521:xe</param-value>
  </context-param>
  <context-param>
    <param-name>user</param-name>
    <param-value>system</param-value>
  </context-param>
  <context-param>
    <param-name>pass</param-name>
    <param-value>oracle</param-value>
  </context-param>
  
  <servlet>
    <servlet-name>signup2</servlet-name>
    <servlet-class>login_logout_bysession.Signup</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>signup2</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Login_data</servlet-name>
    <servlet-class>login_logout_bysession.Login_data</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login_data</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>welcome</servlet-name>
    <servlet-class>login_logout_bysession.Welcome</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>welcome</servlet-name>
    <url-pattern>/welcomes</url-pattern>
  </servlet-mapping>
  <servlet>
  <servlet-name>logout</servlet-name>
<servlet-class>login_logout_bysession.Logout</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>logout</servlet-name>
<url-pattern>/logout</url-pattern>
</servlet-mapping>
</web-app>